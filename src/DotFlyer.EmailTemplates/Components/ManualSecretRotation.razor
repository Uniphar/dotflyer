@namespace DotFlyer.EmailTemplates.Components.Templates
@using DotFlyer.EmailTemplates.Models
@using DotFlyer.EmailTemplates.Components
@inherits Microsoft.AspNetCore.Components.ComponentBase

@code {
    [Parameter]
    public required ManualSecretRotationModel Model { get; set; }
}

<EmailLayout Title="Manual Secret Rotation Notification">
  <div class="subject">Manual Secret Rotation for @Model.ResourceName</div>
  <div>
    <p>Manual secret rotation for <strong>@Model.ResourceId</strong></p>
    <p><strong>KeyVaults:</strong> @string.Join(", ", Model.KeyVaults)</p>
    <p><strong>Secret Name:</strong> @Model.SecretName</p>
    <p><strong>Old secret will be deleted on:</strong> @Model.OldSecretDeletionDateUtc.ToUniversalTime().ToString("G") UTC</p>
    @if (!string.IsNullOrEmpty(Model.PwPushUrl))
    {
        <p><strong>PwPush link (valid for @Model.PwPushExpiresInDays days or @Model.PwPushExpiresAfterViews views):</strong> <a href="@Model.PwPushUrl">@Model.PwPushUrl</a></p>
    }
  </div>
</EmailLayout>